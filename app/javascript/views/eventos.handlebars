<div class="flex">
    <div class="p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mt-2 ml-1 ">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        
    </div>

<div class="relative flex">
  <form action="/eventos" method="GET" class="flex items-center">        
    <select name="seletorCidade" id="seletorCidade" class="block mt-2 bg-gray-100 px-4 py-2 pr-8 ">
      <option id="cidade" disabled selected>Selecione uma localização</option>
      {{#each cidade}}
        <option>{{dataValues.cidade}}</option>
      {{/each}}
    </select>
    
    <button type="submit" class="text-black py-2 mt-2 rounded-lg ml-2 w-7">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
</svg>

    </button>
  </form>
  
</div>


</div>
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 lg:grid-cols-3 2xl:grid-cols-5 items-center mx-auto ">
     {{#each evento}}
                                    <div class="col-span-1 p-2">
                                        <div class="col-span-4 text-center text-lg font-bold uppercase mb-4 mt-6">
                                            <a href="/paginaEvento/{{dataValues.titulo}}/{{dataValues.eventoID}}">{{dataValues.titulo}}</a>
                                        </div>
                                        <div class="w-18 col-span-2">
                                            <img src="/3_june_6.jpg" alt="image1">
                                        </div>
                                        <div class="grid grid-cols-1 col-span-2 "> 
                                            <span><strong>Organizador:</strong> {{dataValues.empresa}}</span>                                            
                                            <div class="grid grid-cols-1 h-12">
                                                <span><strong>Data:</strong></span>
                                                <span>{{dataValues.data}}</span>            
                                            </div>
                                            <div class="grid grid-cols-5 w-36 mt-6">
                                                <span class="w-32"><strong>{{dataValues.cidade}}-{{dataValues.estado}}</strong></span>
                                            </div>
                                        </div>                                        
                                    </div>                                       
                                {{/each}}
                            </div>

</div>