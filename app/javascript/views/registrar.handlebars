<div class="flex md:w-1/2 justify-center pt-10 items-center bg-white p-2 mx-auto mt-10 "> 
        <form action="registrar" method="POST" id="registrationForm" class="bg-white">
            <h1 class="text-blue-700 font-bold text-2xl flex justify-center mb-5">Registrar!</h1>
            <div class="mb-4">
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl  div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" 
                        d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" 
                        clip-rule="evenodd" />
                    </svg>
                    <input class="pl-2 outline-none border-none required" name="nome" type="text"  id="nome" placeholder="Nome" required oninput="nameValidate(event)"/>
                </div>
                <span class="text-xs text-red-600 underline ml-2 hidden span-required">Nome deve ter mais de 3 letras</span>
            </div>
            <div class="mb-4">                                    
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
                    </svg>
                    <input class="pl-2 outline-none border-none required border-red-400" type="text" name="sobrenome" id="sobrenome" placeholder="Sobrenome" required oninput="sobrenomeValidate(event)" />
                </div> 
                <span class="text-xs text-red-600 underline ml-2 hidden span-required">Sobrenome deve ter mais de 3 letras</span>                               
            </div>
            <div class="mb-4">                                    
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                        clip-rule="evenodd" />
                    </svg>
                    <input class="pl-2 outline-none border-none required border-red-400" type="text" name="CPF" id="CPF" placeholder="CPF" required oninput="CPFValidate(event)"/>
                </div>
                <span class="text-xs text-red-600 underline ml-2 hidden span-required">CPF invalido</span>
            </div>
                <div class="mb-4">                                    
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                        clip-rule="evenodd" />
                    </svg>
                    <input class="pl-2 outline-none border-none required border-red-400" type="date" name="datanascimento" id="datanascimento" placeholder="Data de Nascimento" required oninput="dataValidate(event)"/>
                </div>
                <span class="text-xs text-red-600 underline ml-2 hidden span-required">Data Incorreta</span>
            </div>
            <div class="mb-4">                                    
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg>
                    <input class="pl-2 outline-none border-none required border-red-400" type="text" name="email" id="email" placeholder="Endereço de email" autocomplete="current-email" required oninput="EmailValidate(event)"/>
                </div>
                    <span class="text-xs text-red-600 underline ml-2 hidden span-required">Email Invalido</span>
            </div>  
            <div class="mb-2">
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                        clip-rule="evenodd" />
                    </svg>
                    <input class="pl-2 outline-none border-none required border-red-400" type="password" name="senha" id="senha" placeholder="Senha" autocomplete="current-password" required oninput="senhaPrincipalValidate(event)"/>
                </div>
                <span class="text-xs text-red-600 underline ml-2 hidden span-required">Senha deve ter pelo menos 8 caracteres</span>
            </div>                              
            <div class="mb-4">                                    
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl div-required">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                        clip-rule="evenodd" />
                    </svg>
                    <input class="pl-2 outline-none border-none required border-red-400" type="password" name="confirmpassword" id="confirmpassword" placeholder="Confirme a senha" autocomplete="current-password" required oninput="senhaSecundariaValidate(event)"/>
                </div>
                <span class="text-xs text-red-600 underline ml-2 hidden span-required">Senhas devem ser iguais</span>
            </div>       
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600">Cadastrar</button>  
        </form> 
    </div>
    {{#if usuario}}                                   
        <a href="../login" class="text-blue-600 flex md:w-1/2 justify-center items-center bg-white p-2 mx-auto underline">Usuário já possui acesso, voltar para tela de login?</span>
    {{/if}}   
<script src="registroAutenticacao.js"></script>
